    def validate_bd_number(self, number):
        """Validate Bangladeshi mobile number format"""
        if not number or len(number.strip()) == 0:
            console.print("[bold yellow]âš ï¸ Please enter a mobile number[/bold yellow]")
            return None
            
        # Remove spaces and dashes
        number = number.replace(" ", "").replace("-", "")
        
        # Standardize format to +880
        if number.startswith("0"):
            number = "+88" + number
        elif number.startswith("88"):
            number = "+" + number
        
        # Check if it's a valid BD number
        if not number.startswith("+880"):
            console.print("[bold yellow]âš ï¸ Number must be a Bangladesh mobile number starting with +880, 880, or 0[/bold yellow]")
            return None
            
        # Check length (should be 14 characters including +880)
        if len(number) != 14:
            console.print(f"[bold yellow]âš ï¸ Invalid length: {len(number)} digits. Bangladesh mobile numbers should have 11 digits (excluding country code)[/bold yellow]")
            return None
            
        # Check if prefix is valid
        prefix = number[4:7]
        if prefix not in BD_OPERATORS:
            console.print(f"[bold yellow]âš ï¸ Invalid operator prefix '{prefix}'. Valid prefixes: {', '.join(BD_OPERATORS.keys())}[/bold yellow]")
            return None
            
        return number
    
